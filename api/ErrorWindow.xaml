<Window x:Class="CodeForcesDRP.api.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeForcesDRP.api"
        mc:Ignorable="d"
        Height="160" Width="300" ResizeMode="CanMinimize">
    <Grid>
        <TextBlock HorizontalAlignment="Left" FontSize="20">
            <Run Text="{Binding Message}" />
        </TextBlock>
        <Button Content="Close" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20" Click="CloseButton_Click" />
    </Grid>
</Window>
